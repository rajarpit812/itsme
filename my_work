    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const worksContainer = document.getElementById('works-container');
            const loadingMessage = document.getElementById('loading-message');
            const errorMessage = document.getElementById('error-message');

            // *** IMPORTANT: REPLACE WITH YOUR GOOGLE APPS SCRIPT WEB APP URL ***
            const apiUrl = 'https://script.google.com/macros/s/AKfycbw9Xa3GtjW4YlCJCtuHR59DtuoELI4cVFazvFivXnYJ7v3K7Hu4hDgxgB7RyYZAzBVt5A/exec'; // e.g., 'https://script.google.com/macros/s/AKfycbzzh.../exec'

            async function fetchAndDisplayWorks() {
                loadingMessage.classList.remove('hidden'); // Show loading message
                errorMessage.classList.add('hidden'); // Hide any previous error message
                worksContainer.innerHTML = ''; // Clear existing content

                try {
                    const response = await fetch(apiUrl);
                    if (!response.ok) {
                        throw new Error(`HTTP error! status: ${response.status}`);
                    }
                    const data = await response.json(); // Our Apps Script returns { records: [...] }
                    const works = data.records;

                    if (!works || works.length === 0) {
                        worksContainer.innerHTML = '<p class="text-center text-stone-600 mt-8 col-span-full">No works to display yet. Add items to your Google Sheet!</p>';
                    } else {
                        // Filter for 'published: TRUE' and sort by 'order'
                        const filteredAndSortedWorks = works
                            .filter(work => work.published === true || work.published === 'TRUE') // Check for boolean true or string 'TRUE'
                            .sort((a, b) => (a.order || Infinity) - (b.order || Infinity)); // Sort by 'order' field

                        if (filteredAndSortedWorks.length === 0) {
                            worksContainer.innerHTML = '<p class="text-center text-stone-600 mt-8 col-span-full">No published works to display yet.</p>';
                        } else {
                            filteredAndSortedWorks.forEach((work, index) => {
                                const delay = (index + 1) * 100; // Staggered animation delay
                                const workHtml = `
                                    <div class="work-item" style="animation-delay: ${delay}ms;">
                                        <a href="${work.link || '#'}" target="_blank" class="block work-card p-8 rounded-lg">
                                            <h3 class="text-2xl md:text-3xl font-bold mb-2">${work.title || 'Untitled'}</h3>
                                            <p class="text-lg text-stone-600 mb-4">${work.description || 'No description provided.'}</p>
                                            <div class="text-lg text-stone-500 group-hover:text-black transition-colors duration-300">
                                                ${work.linkText || 'View Item'} &rarr;
                                            </div>
                                        </a>
                                    </div>
                                `;
                                worksContainer.innerHTML += workHtml;
                            });
                        }
                    }
                } catch (error) {
                    console.error('Error fetching works from Google Sheet:', error);
                    errorMessage.classList.remove('hidden'); // Show error message
                    worksContainer.innerHTML = '<p class="text-center text-red-600 mt-8 col-span-full">Could not load works. Please check your Google Sheet and Apps Script deployment.</p>';
                } finally {
                    loadingMessage.classList.add('hidden'); // Hide loading message
                }
            }

            // --- Initial call to fetch and display works ---
            fetchAndDisplayWorks();

            // --- Existing fade-in animation logic ---
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('in-view');
                    }
                });
            }, { threshold: 0.1 });

            // Observe the container itself, and new items will animate as they enter view
            // This will apply to existing section-fade-in elements as well.
            const sectionsToObserve = document.querySelectorAll('.section-fade-in');
            sectionsToObserve.forEach(section => {
                observer.observe(section);
            });

            // For dynamically added items, you might need a MutationObserver for more complex scenarios,
            // but given the staggered animation based on index, the 'in-view' class will be added to the
            // .work-item as soon as it's appended to the DOM, and its animation will start after its delay.
        });
    </script>
